@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0" style="background-color: #1e1e1e; color: #fff;">
                <div class="card-header text-center border-0 pt-4" style="background-color: transparent;">
                    <h2 class="fw-bold text-warning" style="font-style: italic; letter-spacing: 1px;">GYM-A</h2>
                    <p class="text-white-50 small text-uppercase fw-bold">Üye Girişi</p>
                </div>
                <div class="card-body p-4">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label text-warning small fw-bold">E-POSTA</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="mail@ornek.com"
                                   style="background-color: #2d2d2d; border: 1px solid #444; color: #fff; padding: 10px;" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label text-warning small fw-bold">ŞİFRE</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="********"
                                   style="background-color: #2d2d2d; border: 1px solid #444; color: #fff; padding: 10px;" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" style="background-color: #2d2d2d; border-color: #444;" />
                            <label class="form-check-label text-white-50 small" asp-for="Input.RememberMe">
                                Beni Hatırla
                            </label>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button id="login-submit" type="submit" class="btn btn-warning fw-bold text-dark py-3 fs-5">GİRİŞ YAP</button>
                        </div>

                        <div class="d-flex justify-content-center align-items-center mt-4">
                            <span class="text-white me-2 fs-6">Hesabın yok mu?</span>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-warning fw-bold text-decoration-none fs-6">
                                HEMEN KAYIT OL
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}