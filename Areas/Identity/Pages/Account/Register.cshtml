@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0" style="background-color: #1e1e1e; color: #fff;">
                <div class="card-header text-center border-0 pt-4" style="background-color: transparent;">
                    <h2 class="fw-bold text-warning" style="font-style: italic; letter-spacing: 1px;">GYM-A</h2>
                    <p class="text-white-50 small text-uppercase fw-bold">Yeni Üyelik Formu</p>
                </div>
                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Input.FirstName" class="form-label text-warning small fw-bold">AD</label>
                                <input asp-for="Input.FirstName" class="form-control" placeholder="Ad"
                                       style="background-color: #2d2d2d; border: 1px solid #444; color: #fff; padding: 10px;" />
                                <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.LastName" class="form-label text-warning small fw-bold">SOYAD</label>
                                <input asp-for="Input.LastName" class="form-control" placeholder="Soyad"
                                       style="background-color: #2d2d2d; border: 1px solid #444; color: #fff; padding: 10px;" />
                                <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label text-warning small fw-bold">E-POSTA ADRESİ</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="mail@ornek.com"
                                   style="background-color: #2d2d2d; border: 1px solid #444; color: #fff; padding: 10px;" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label text-warning small fw-bold">ŞİFRE</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="********"
                                   style="background-color: #2d2d2d; border: 1px solid #444; color: #fff; padding: 10px;" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label text-warning small fw-bold">ŞİFRE TEKRAR</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="********"
                                   style="background-color: #2d2d2d; border: 1px solid #444; color: #fff; padding: 10px;" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button id="registerSubmit" type="submit" class="btn btn-warning fw-bold text-dark py-3 fs-5">KAYIT OL</button>
                        </div>

                        <div class="d-flex justify-content-center align-items-center mt-4">
                            <span class="text-white me-2 fs-6">Zaten üye misin?</span>
                            <a asp-page="./Login" class="text-warning fw-bold text-decoration-none fs-6">
                                GİRİŞ YAP
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}