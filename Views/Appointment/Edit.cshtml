@model GymProject1.Entities.Appointment

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0" style="background-color: #1e1e1e; color: #fff;">

                <div class="card-header bg-warning text-dark">
                    <h3 class="fw-bold mb-0"><i class="fa-solid fa-pen-to-square"></i> Randevuyu Düzenle</h3>
                </div>

                <div class="card-body p-4">

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="AppointmentId" />

                        <div class="mb-3">
                            <label asp-for="AppointmentDate" class="form-label text-warning fw-bold">Tarih ve Saat</label>
                            <input asp-for="AppointmentDate" class="form-control" type="datetime-local"
                                   style="background-color: #2d2d2d; color: white; border: 1px solid #444;" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label text-warning fw-bold">Durum</label>
                            <input asp-for="Status" class="form-control"
                                   style="background-color: #2d2d2d; color: white; border: 1px solid #444;" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TrainerId" class="form-label text-warning fw-bold">Eğitmen</label>
                                <select asp-for="TrainerId" class="form-select" asp-items="ViewBag.TrainerId"
                                        style="background-color: #2d2d2d; color: white; border: 1px solid #444;"></select>
                                <span asp-validation-for="TrainerId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ServiceId" class="form-label text-warning fw-bold">Hizmet</label>
                                <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId"
                                        style="background-color: #2d2d2d; color: white; border: 1px solid #444;"></select>
                                <span asp-validation-for="ServiceId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AppUserId" class="form-label text-warning fw-bold">Kullanıcı ID</label>
                            <input asp-for="AppUserId" class="form-control" readonly
                                   style="background-color: #2d2d2d; color: white; border: 1px solid #444;" />
                            <span asp-validation-for="AppUserId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-outline-light flex-grow-1">Listeye Geri Dön</a>
                            <input type="submit" value="KAYDET" class="btn btn-warning fw-bold text-dark flex-grow-1" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}