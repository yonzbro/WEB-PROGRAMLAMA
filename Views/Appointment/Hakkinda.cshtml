@model GymProject1.Controllers.MemberProfileViewModel

@{
    ViewData["Title"] = "Hakkında";
}

<div class="container mt-5">
    <div class="row">

        <div class="col-md-4 mb-4">
            <div class="card bg-dark text-white border-warning shadow-lg">
                <div class="card-body text-center p-4">
                    @if (!string.IsNullOrEmpty(Model.User.ImageUrl))
                    {
                        <img src="@Model.User.ImageUrl" class="rounded-circle mb-3 border border-warning" style="width: 120px; height: 120px; object-fit: cover;" alt="Profil">
                    }
                    else
                    {
                        <i class="fas fa-user-circle text-secondary mb-3" style="font-size: 100px;"></i>
                    }

                    <h4 class="text-warning fw-bold mb-1">@Model.User.FirstName @Model.User.LastName</h4>
                    <p class="text-white-50 small mb-3">@Model.User.Email</p>

                    <div class="mb-4">
                        <span class="badge rounded-pill bg-success bg-opacity-25 text-success border border-success px-3 py-2">
                            <i class="fas fa-check-circle me-1"></i> Üyelik Durumu: Aktif
                        </span>
                    </div>

                    <div class="d-grid gap-2">
                        <a href="/Identity/Account/Manage" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-user-edit me-1"></i> Profili Düzenle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card bg-dark text-white border-secondary shadow">
                <div class="card-header bg-secondary text-white fw-bold d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-clipboard-list me-2"></i> Kayıtlı Olduğum Dersler & Randevular</span>
                    <span class="badge bg-warning text-dark">Toplam: @Model.Appointments.Count</span>
                </div>
                <div class="card-body p-0">

                    @if (Model.Appointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-hover mb-0 align-middle">
                                <thead class="table-secondary">
                                    <tr>
                                        <th>Hizmet / Ders</th>
                                        <th>Eğitmen</th>
                                        <th>Tarih & Saat</th>
                                        <th>Durum</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Appointments)
                                    {
                                        <tr>
                                            <td>
                                                <span class="fw-bold text-warning">@item.Service?.Name</span>
                                            </td>
                                            <td>
                                                <i class="fas fa-user-tie me-1 text-muted"></i> @item.Trainer?.Name
                                            </td>
                                            <td>
                                                <div>@item.AppointmentDate.ToString("dd.MM.yyyy")</div>
                                                <small class="text-muted">@item.AppointmentDate.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (item.Status == "Onaylandı")
                                                {
                                                    <span class="badge bg-success">Onaylandı</span>
                                                }
                                                else if (item.Status == "İptal Edildi")
                                                {
                                                    <span class="badge bg-danger">İptal</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Bekliyor</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Status != "İptal Edildi" && item.AppointmentDate > DateTime.Now)
                                                {
                                                    <a asp-action="Cancel" asp-route-id="@item.AppointmentId"
                                                       class="btn btn-sm btn-outline-danger"
                                                       onclick="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?')">
                                                        <i class="fas fa-times"></i> İptal
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-secondary mb-3"></i>
                            <p class="text-white-50">Henüz kayıtlı bir dersiniz yok.</p>
                            <a asp-controller="Appointment" asp-action="Create" class="btn btn-warning">Hemen Randevu Al</a>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
