@model IEnumerable<GymProject1.Entities.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container py-5">
    <h2 class="text-warning fw-bold mb-4" style="font-style: italic;">
        @(User.IsInRole("Admin") ? "TÜM RANDEVULAR (YÖNETİCİ)" : "RANDEVULARIM")
    </h2>

    <a asp-action="Create" class="btn btn-outline-warning mb-4">
        <i class="fa-solid fa-plus"></i> Yeni Randevu Al
    </a>

    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle shadow-sm rounded">
            <thead>
                <tr class="text-warning">
                    <th>Tarih</th>
                    <th>Hizmet</th>
                    <th>Eğitmen</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Üye</th>
                    }
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <i class="fa-regular fa-clock text-muted me-2"></i>
                            @item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")
                        </td>
                        <td>@item.Service.Name</td>
                        <td>@item.Trainer.Name</td>

                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                @(item.AppUser != null ? $"{item.AppUser.FirstName} {item.AppUser.LastName}" : item.AppUserId)
                            </td>
                        }

                        <td>
                            @if (item.Status == "Onaylandı")
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else if (item.Status == "Onay Bekliyor")
                            {
                                <span class="badge bg-warning text-dark">Beklemede</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">İptal</span>
                            }
                        </td>
                        <td>
                            @if (User.IsInRole("Admin") && item.Status == "Onay Bekliyor")
                            {
                                <a asp-action="Approve" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-success me-1">
                                    <i class="fa-solid fa-check"></i> Onayla
                                </a>
                            }

                            @if (item.Status != "İptal Edildi")
                            {
                                <a asp-action="Cancel" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?');">
                                    <i class="fa-solid fa-xmark"></i> İptal
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="alert alert-secondary text-center">Henüz kayıtlı randevu bulunmamaktadır.</div>
        }
    </div>
</div>