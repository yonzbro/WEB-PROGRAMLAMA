@{
    ViewData["Title"] = "Kampanya Bildirimi";
}

<div class="container mt-5">
    <div class="card bg-dark text-white border-warning shadow-lg">
        <div class="card-header bg-warning text-dark">
            <h3 class="fw-bold"><i class="fa-solid fa-bullhorn"></i> Toplu Kampanya Maili Gönder</h3>
        </div>
        <div class="card-body">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form asp-action="SendEmail" method="post">
                <div class="mb-3">
                    <label class="form-label text-warning">Konu Başlığı</label>
                    <input type="text" name="subject" class="form-control" placeholder="Örn: %50 Yaz İndirimi Başladı!" required />
                </div>
                <div class="mb-3">
                    <label class="form-label text-warning">Mesaj İçeriği</label>
                    <textarea name="messageBody" class="form-control" rows="6" placeholder="Kampanya detaylarını buraya yazınız..." required></textarea>
                </div>
                <button type="submit" class="btn btn-warning w-100 fw-bold">
                    <i class="fa-solid fa-paper-plane"></i> GÖNDER
                </button>
            </form>
        </div>
    </div>
</div>
