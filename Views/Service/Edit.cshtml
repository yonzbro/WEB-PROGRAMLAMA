@model GymProject1.Entities.Service

@{
    ViewData["Title"] = "Hizmeti Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card bg-dark border-warning shadow">

                <div class="card-header bg-warning text-dark">
                    <h4 class="fw-bold mb-0">Hizmeti Düzenle</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Edit">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="ServiceId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label text-warning">Paket Adı</label>
                            <input asp-for="Name" class="form-control bg-secondary text-light border-0" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DurationMinutes" class="form-label text-warning">Süre (Dakika)</label>
                            <input asp-for="DurationMinutes" type="number" class="form-control bg-secondary text-light border-0" />
                            <span asp-validation-for="DurationMinutes" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label text-warning">Fiyat (₺)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control bg-secondary text-light border-0" />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label text-warning">Açıklama</label>
                            <textarea asp-for="Description" class="form-control bg-secondary text-light border-0" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning fw-bold">Değişiklikleri Kaydet</button>
                            <a asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
