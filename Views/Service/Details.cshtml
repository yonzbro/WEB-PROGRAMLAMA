@model GymProject1.Entities.Service

@{
    ViewData["Title"] = "Hizmet Detayları";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card bg-dark border-primary shadow">

                <div class="card-header bg-primary text-white">
                    <h4 class="fw-bold mb-0">
                        Hizmet Detayları
                    </h4>
                </div>

                <div class="card-body text-light">

                    <div class="row mb-3 border-bottom border-secondary pb-2">
                        <div class="col-sm-4 text-secondary fw-bold">
                            @Html.DisplayNameFor(model => model.Name)
                        </div>
                        <div class="col-sm-8 fs-5">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>

                    <div class="row mb-3 border-bottom border-secondary pb-2">
                        <div class="col-sm-4 text-secondary fw-bold">
                            Süre
                        </div>
                        <div class="col-sm-8">
                            @Html.DisplayFor(model => model.DurationMinutes) Dakika
                        </div>
                    </div>

                    <div class="row mb-3 border-bottom border-secondary pb-2">
                        <div class="col-sm-4 text-secondary fw-bold">
                            @Html.DisplayNameFor(model => model.Price)
                        </div>
                        <div class="col-sm-8 text-success fw-bold fs-5">
                            @Html.DisplayFor(model => model.Price) ₺
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 text-secondary fw-bold">
                            Açıklama
                        </div>
                        <div class="col-sm-8 text-muted">
                            @(Model.Description ?? "Açıklama girilmemiş.")
                        </div>
                    </div>

                </div>

                <div class="card-footer bg-secondary bg-opacity-25 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        Listeye Dön
                    </a>

                    <a asp-action="Edit" asp-route-id="@Model?.ServiceId" class="btn btn-warning fw-bold">
                        Düzenle
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>