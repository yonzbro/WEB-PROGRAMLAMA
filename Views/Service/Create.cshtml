@model GymProject1.Entities.Service

@{
    ViewData["Title"] = "Yeni Paket Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-warning shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="fw-bold mb-0">Yeni Hizmet Paketi Oluştur</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="SalonId" class="form-label text-warning">Salon Seçiniz</label>
                            <select asp-for="SalonId" class="form-control bg-secondary text-light border-0" asp-items="ViewBag.SalonId">
                                <option value="" class="text-dark">-- Lütfen Bir Salon Seçin --</option>
                            </select>
                            <span asp-validation-for="SalonId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label text-warning">Paket Adı</label>
                            <input asp-for="Name" class="form-control bg-secondary text-light border-0" placeholder="Örn: Gold Üyelik" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DurationMinutes" class="form-label text-warning">Süre (Dakika)</label>
                            <input asp-for="DurationMinutes" type="number" class="form-control bg-secondary text-light border-0" value="30" />
                            <span asp-validation-for="DurationMinutes" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label text-warning">Fiyat (₺)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control bg-secondary text-light border-0" />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label text-warning">Açıklama</label>
                            <textarea asp-for="Description" class="form-control bg-secondary text-light border-0" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-warning w-100 fw-bold">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>