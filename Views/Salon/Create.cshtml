@model GymProject1.Entities.Salon

@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark border-warning shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="fw-bold mb-0">Yeni Salon Ekle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">

                        <div class="mb-3">
                            <label class="form-label text-warning">Salon Adı</label>
                            <input asp-for="Name" class="form-control bg-secondary text-light border-0" placeholder="Örn: Kadıköy Şubesi" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-warning">Adres</label>
                            <input asp-for="Address" class="form-control bg-secondary text-light border-0" placeholder="Tam adres giriniz..." />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-warning">Kapasite</label>
                            <input asp-for="Capacity" type="number" class="form-control bg-secondary text-light border-0" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning fw-bold">Kaydet</button>
                            <a asp-action="Index" class="btn btn-outline-light">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
