@model List<GymProject1.Controllers.AdminController.UserViewModel>
@{
    ViewData["Title"] = "Üye Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-warning fw-bold"><i class="fas fa-users me-2"></i> Kayıtlı Üyeler</h2>
        <a asp-action="Index" class="btn btn-outline-light">Panele Dön</a>
    </div>

    <div class="card shadow-lg bg-dark border-secondary">
        <div class="card-body p-0">
            <table class="table table-dark table-hover mb-0">
                <thead class="bg-warning text-dark">
                    <tr>
                        <th class="py-3 ps-4">Ad Soyad</th>
                        <th class="py-3">E-Posta</th>
                        <th class="py-3">Rol</th>
                        <th class="py-3 text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4 align-middle fw-bold">@user.FullName</td>
                            <td class="align-middle text-white-50">@user.Email</td>
                            <td class="align-middle">
                                @if (user.Role == "Admin")
                                {
                                    <span class="badge bg-danger text-uppercase">Yönetici</span>
                                }
                                else if (user.Role == "Trainer")
                                {
                                    <span class="badge bg-info text-dark text-uppercase">Eğitmen</span>
                                }
                                else
                                {
                                    <span class="badge bg-success text-uppercase">Üye</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <form asp-action="DeleteMember" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Bu üyeyi silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash-alt"></i> Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
